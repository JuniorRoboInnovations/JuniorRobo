<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragments.CourseDetailFragment">

    <ScrollView
        android:id="@+id/course_detail_root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/back_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/pink_700"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circularImageShapeOverlay" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/course_detail_title"
                style="@style/TextAppearance.MdcTypographyStyles.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/pink_700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="App Development" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/course_detail_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_detail_title"
                app:shapeAppearanceOverlay="@style/cornerImageShapeOverlay2"
                tools:src="@drawable/coding_onboard" />

            <LinearLayout
                android:id="@+id/subcourse_subjects_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_detail_image">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subjects_covered"
                    android:textColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subjects_covered"
                    style="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text=" App Development , Kotlin , XML" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/subcourse_features_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subcourse_subjects_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/subcourse_course_includes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/this_course_includes"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/online_live_class_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_blue"
                        android:padding="5dp"
                        android:src="@drawable/ic_live_class"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subcourse_course_includes"
                        app:shapeAppearanceOverlay="@style/circularImageShapeOverlay" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/online_live_class_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/online_live_class"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@id/online_live_class_image"
                        app:layout_constraintStart_toStartOf="@id/online_live_class_image"
                        app:layout_constraintTop_toBottomOf="@id/online_live_class_image" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/monthly_ptm_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_red"
                        android:padding="5dp"
                        android:src="@drawable/ic_ptm"
                        app:layout_constraintEnd_toStartOf="@id/lifetime_recording_image"
                        app:layout_constraintStart_toEndOf="@id/online_live_class_image"
                        app:layout_constraintTop_toBottomOf="@id/subcourse_course_includes"
                        app:shapeAppearanceOverlay="@style/circularImageShapeOverlay" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/monthly_ptm_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_ptm"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@id/monthly_ptm_image"
                        app:layout_constraintStart_toStartOf="@id/monthly_ptm_image"
                        app:layout_constraintTop_toBottomOf="@id/monthly_ptm_image" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/lifetime_recording_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_purple"
                        android:padding="5dp"
                        android:src="@drawable/ic_recording"
                        app:layout_constraintEnd_toStartOf="@id/classroom_test_image"
                        app:layout_constraintStart_toEndOf="@id/monthly_ptm_image"
                        app:layout_constraintTop_toBottomOf="@id/subcourse_course_includes"
                        app:shapeAppearanceOverlay="@style/circularImageShapeOverlay" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lifetime_recording_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lifetime_recording"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@id/lifetime_recording_image"
                        app:layout_constraintStart_toStartOf="@id/lifetime_recording_image"
                        app:layout_constraintTop_toBottomOf="@id/lifetime_recording_image" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/classroom_test_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_yellow"
                        android:padding="5dp"
                        android:src="@drawable/ic_test"
                        app:layout_constraintEnd_toStartOf="@id/monthly_fee_image"
                        app:layout_constraintStart_toEndOf="@id/lifetime_recording_image"
                        app:layout_constraintTop_toBottomOf="@id/subcourse_course_includes"
                        app:shapeAppearanceOverlay="@style/circularImageShapeOverlay" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/classroom_test_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/classroom_ntest"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@id/classroom_test_image"
                        app:layout_constraintStart_toStartOf="@id/classroom_test_image"
                        app:layout_constraintTop_toBottomOf="@id/classroom_test_image" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/monthly_fee_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_green"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_money_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/classroom_test_image"
                        app:layout_constraintTop_toBottomOf="@id/subcourse_course_includes"
                        app:shapeAppearanceOverlay="@style/circularImageShapeOverlay" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/monthly_fee_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_nfee"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@id/monthly_fee_image"
                        app:layout_constraintStart_toStartOf="@id/monthly_fee_image"
                        app:layout_constraintTop_toBottomOf="@id/monthly_fee_image" />

                    <kr.co.prnd.readmore.ReadMoreTextView
                        android:id="@+id/course_detail_about_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:justificationMode="inter_word"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/online_live_class_text"
                        app:readMoreColor="@color/pink_700"
                        app:readMoreMaxLine="3"
                        app:readMoreText=" ...Read more"
                        tools:targetApi="o"
                        tools:text="Long Text" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/subcourse_recycler_view_card"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                app:layout_constraintEnd_toEndOf="@id/subcourse_features_card"
                app:layout_constraintStart_toStartOf="@id/subcourse_features_card"
                app:layout_constraintTop_toBottomOf="@id/subcourse_features_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/subcourse_highlights_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/course_highlights"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/subcourse_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:scrollbars="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/subcourse_highlights_text"
                        app:layout_constraintTop_toBottomOf="@id/subcourse_highlights_text"
                        tools:listitem="@layout/course_detail_highlight_list_item" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/course_detail_curriculum_container"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subcourse_recycler_view_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/course_curriculum_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Course Curriculum"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/course_detail_curriculum"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/course_curriculum_title"

                        tools:src="@color/blue" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/course_detail_enrol_button"
                style="@style/TextAppearance.MdcTypographyStyles.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/enrol_now_4"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_detail_curriculum_container" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/course_detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_book_demo_button"
        style="@style/Widget.App.ExtendedFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="@string/book_demo"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_book_demo_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>