<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.QuestionDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/questionMarkImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_baseline_help_24"
        android:contentDescription="@string/question_mark" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_question"
        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:textColor="@color/pink_700"
        android:textStyle="bold"
        tools:text="Why do we fall ill?" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView11"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="6dp"
            android:text="@string/subject"
            android:textStyle="bold"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_question_tag"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        android:textSize="14sp"
        tools:text="Biology" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/question_item_imageLabel"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:text="@string/image"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/answer_question_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_default_avatar"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answers_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/answer_item" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/noDataImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/ic__no_data"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_answer_this"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:icon="@drawable/ic_add"
        android:background="@drawable/styles"
        app:iconGravity="textStart"
        app:backgroundTint="@color/pink_700"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/answer_this"/>

</LinearLayout>