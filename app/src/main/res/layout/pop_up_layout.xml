<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="25dp"
    android:backgroundTint="#3A9CEA"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:id="@+id/popup_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/semiCircle_view"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:background="@drawable/half_circle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_clear_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_white"
            android:background="@color/pink_700"
            app:shapeAppearanceOverlay="@style/circularImageShapeOverlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_logo_image"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            app:shapeAppearanceOverlay="@style/circularImageShapeOverlay"
            app:layout_constraintStart_toStartOf="@id/semiCircle_view"
            app:layout_constraintEnd_toEndOf="@id/semiCircle_view"
            app:layout_constraintTop_toTopOf="@id/semiCircle_view" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_title1"
            style="@style/TextAppearance.MdcTypographyStyles.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corner_view"
            android:textColor="@color/pink_700"
            android:textSize="24sp"
            android:padding="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/semiCircle_view"
            tools:text="Get 5$ off" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#666"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/popup_title1"
            app:layout_constraintStart_toStartOf="@id/popup_title1"
            app:layout_constraintTop_toBottomOf="@id/popup_title1"
            tools:text="Answer 100 question and get offer " />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>