<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Outlined Edit Text Customization -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColorHint">@color/pink_500</item>
        <item name="colorAccent">@color/pink_700</item>
        <item name="colorControlNormal">@color/pink_700</item>
        <item name="colorControlActivated">@color/pink_700</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MdcTypographyStyles.Subtitle1
        </item>
        <item name="textAppearanceCaption">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>
    <!-- Outlined Edit Text Customization ends here -->

    <!-- Outlined ExposedDropdownMenu Edit Text Customization -->
    <style name="ThemeOverlay.MaterialComponents.AutoCompleteTextView" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MdcTypographyStyles.Subtitle1
        </item>
        <item name="textAppearanceCaption">@style/TextAppearance.MdcTypographyStyles.Caption</item>
    </style>
    <style name="Widget.App.Outlined.ExposedDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColorHint">@color/pink_700</item>
        <item name="colorAccent">@color/pink_700</item>
        <item name="colorControlNormal">@color/pink_700</item>
        <item name="colorControlActivated">@color/pink_700</item>
    </style>
    <!-- Outlined ExposedDropdownMenu Edit Text Customization ends here -->

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>